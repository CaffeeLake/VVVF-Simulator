<Window x:Class="VvvfSimulator.GUI.Util.DoubleNumberInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VvvfSimulator.GUI.Util"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=NumberEnterBox}"
        Title="Enther the value" Height="180" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="DescriptionBox" Content="enter the value" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="NumberEnterBox" Margin="34,0,34,0" TextWrapping="Wrap" Text="20.00" VerticalAlignment="Center" Height="45" FontFamily="M PLUS 2" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="NumberEnterBox_TextChanged"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="200" Click="Button_Click" Height="28" Margin="0,0,0,10"/>
    </Grid>
</Window>
